with Interfaces;

package GESTE_Fonts is

   type Font_Bitmap is array (Natural range <>) of Interfaces.Unsigned_8;
   type Font_Bitmap_Ref is not null access constant Font_Bitmap;

   type Bitmap_Font is record
      Bytes_Per_Glyph : Positive;
      Glyph_Width     : Positive;
      Glyph_Height    : Positive;
      Data            : Font_Bitmap_Ref;
   end record;

   type Bitmap_Font_Ref is access constant Bitmap_Font;

end GESTE_Fonts;
